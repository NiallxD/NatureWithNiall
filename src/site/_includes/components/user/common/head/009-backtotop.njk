<script>
  let totopButton = document.getElementById("totop");

  // Check if the button is detected
  if (totopButton) {
    console.log("To Top button detected.");
  } else {
    console.log("To Top button not detected.");
  }

  window.onscroll = function() { scrollFunction() };

  function scrollFunction() {
    console.log("Scroll function called."); // Debug log for scroll function
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
      totopButton.style.display = "block";
      console.log("To Top button displayed.");
    } else {
      totopButton.style.display = "none";
      console.log("To Top button hidden.");
    }
  }

  totopButton.addEventListener('click', function() {
    console.log("To Top button clicked."); // Debug log for button click
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  });
</script>